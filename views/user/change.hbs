<style>
    .change-password-container {
        background: #fff;
        max-width: 400px;
        margin: 80px auto 0 auto;
        padding: 32px 32px 24px 32px;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    .change-password-container h1 {
        color: #f76b1c;
        margin-bottom: 24px;
    }

    .input-group {
        margin-bottom: 18px;
        text-align: left;
    }

    .input-group label {
        display: block;
        margin-bottom: 6px;
        color: #333;
        font-weight: 500;
    }

    .input-group input {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #f6d365;
        border-radius: 8px;
        font-size: 1em;
        background: #fdf6ed;
        transition: border 0.2s;
    }

    .input-group input:focus {
        border: 1.5px solid #f76b1c;
        outline: none;
    }

    .change-btn {
        width: 100%;
        padding: 12px 0;
        background: linear-gradient(90deg, #f76b1c 0%, #fad961 100%);
        color: #fff;
        font-weight: bold;
        border: none;
        border-radius: 24px;
        font-size: 1.1em;
        box-shadow: 0 4px 16px rgba(247, 107, 28, 0.10);
        transition: background 0.3s, transform 0.2s;
        margin-top: 8px;
    }

    .change-btn:hover {
        background: linear-gradient(90deg, #fad961 0%, #f76b1c 100%);
        color: #fff;
        transform: translateY(-2px) scale(1.03);
    }

    .message {
        margin-bottom: 16px;
        font-weight: 500;
    }

    .message.error {
        color: #d32f2f;
    }

    .message.success {
        color: #388e3c;
    }
</style>
<div class="change-password-container">
    <h1>Change Password</h1>
    {{#if error}}
    <div class="message error">{{error}}</div>
    {{/if}}
    {{#if success}}
    <div class="message success">{{success}}</div>
    {{/if}}
    <form action="/users/change-password" method="POST">
        <div class="input-group">
            <label for="currentPassword">Current Password</label>
            <input type="password" id="currentPassword" name="currentPassword" required autocomplete="current-password">
        </div>
        <div class="input-group">
            <label for="newPassword">New Password</label>
            <input type="password" id="newPassword" name="newPassword" required autocomplete="new-password">
        </div>
        <div class="input-group">
            <label for="confirmNewPassword">Confirm New Password</label>
            <input type="password" id="confirmNewPassword" name="confirmNewPassword" required
                autocomplete="new-password">
        </div>
        <button class="change-btn" type="submit">Change Password</button>
    </form>
</div>