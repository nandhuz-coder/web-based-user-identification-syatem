<style>
    /* Register Form Styles */
    .register-container {
        background: #fff;
        max-width: 400px;
        margin: 80px auto 0 auto;
        padding: 32px 32px 24px 32px;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    .register-container h1 {
        color: #f76b1c;
        margin-bottom: 24px;
    }

    .input-group {
        margin-bottom: 18px;
        text-align: left;
    }

    .input-group label {
        display: block;
        margin-bottom: 6px;
        color: #333;
        font-weight: 500;
    }

    .input-group input {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #f6d365;
        border-radius: 8px;
        font-size: 1em;
        background: #fdf6ed;
        transition: border 0.2s;
    }

    .input-group input:focus {
        border: 1.5px solid #f76b1c;
        outline: none;
    }

    .login-btn {
        width: 100%;
        padding: 12px 0;
        background: linear-gradient(90deg, #f76b1c 0%, #fad961 100%);
        color: #fff;
        font-weight: bold;
        border: none;
        border-radius: 24px;
        font-size: 1.1em;
        box-shadow: 0 4px 16px rgba(247, 107, 28, 0.10);
        transition: background 0.3s, transform 0.2s;
        margin-top: 8px;
    }

    .login-btn:hover {
        background: linear-gradient(90deg, #fad961 0%, #f76b1c 100%);
        color: #fff;
        transform: translateY(-2px) scale(1.03);
    }

    .login-links {
        margin-top: 18px;
        font-size: 0.98em;
    }

    .login-links a {
        color: #f76b1c;
        text-decoration: none;
        margin: 0 6px;
        transition: text-decoration 0.2s;
    }

    .login-links a:hover {
        text-decoration: underline;
    }
</style>
<div class="register-container">
    {{#if error}}
    <div style="color:#d32f2f; margin-bottom:12px;">{{error}}</div>
    {{/if}}
    {{#if success}}
    <div style="color:#388e3c; margin-bottom:12px;">{{success}}</div>
    {{/if}}
    <h1>Register</h1>
    <form action="/auth/register-submit" method="POST">
        <div class="input-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" required autocomplete="username">
        </div>
        <div class="input-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required autocomplete="email">
        </div>
        <div class="input-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required autocomplete="new-password">
        </div>
        <div class="input-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required autocomplete="new-password">
        </div>
        <button class="login-btn" type="submit">Register</button>
    </form>
    <div class="login-links">
        <a href="/">Already have an account? Login</a>
    </div>
</div>